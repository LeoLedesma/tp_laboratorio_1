float pedirNumero (char mensaje[])
{
	char esNumero=TRUE;
	int banderaIngreso=FALSE;
    float numeroIngresado;

		if(isdigit(numeroIngresado) || banderaIngreso==FALSE)
		{
			banderaIngreso=TRUE;
			printf("%s", mensaje);
			scanf("%f", &numeroIngresado);
		}


