#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <ctype.h>

#include "funcionesLeonel.h"

#define TRUE 1
#define FALSE 0


float pedirNumero (char mensaje[])
{
	int banderaIngreso=FALSE;
	int esNumero;
    float numeroIngresado;

		do
		{

			printf("%s", mensaje);
			scanf("%f", &numeroIngresado);
			esNumero=isdigit(numeroIngresado);
			printf("%f", esNumero);
			printf("El numero es %.2f", numeroIngresado);
			fflush(stdin);

		}while(isdigit(numeroIngresado)==1);


	return numeroIngresado;

}

